<h1>All Posts</h1>
<div id="posts">
  <div class="flex justify-between items-center">
    <%= link_to "New post", new_post_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>
  <% @posts.each do |post| %>
    <div class="post">
      <h2><%= link_to post.event, post_path(post) %></h2>
      <% if post.item_ids.present? %>
      <div style="display: flex; flex-direction: row; gap: 10px;">
        <% post.item_ids.first(3).each do |item_ids| %>
          <%= image_tag Item.find(item_ids).item_cover.variant(:small) %>
        <% end %>
      </div>
      <% else %>
        <p>No images attached.</p>
      <% end %>
      <p><%= post.description.truncate(100) %></p>
      <small>Posted on: <%= post.created_at.strftime("%B %d, %Y") %></small>
    </div>
  <% end %>
</div>