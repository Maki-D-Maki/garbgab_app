<%= simple_form_for @item do |f| %>

  <%= f.input :name, required: true, allow_blank: false%>

  <%= f.input :item_cover, as: :file, label: 'Image', hint: "Items with no image cannot be posted in Gabs" %>
  <br>
  <%= f.input :description %>

  <div class="form-actions">
    <%= f.button :submit, "Create", class: "rounded-lg" %>
  </div>
<% end %>
